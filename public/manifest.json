{
  "manifest_version": 3,
  "name": "OmniTool",
  "description": "An omnibar microtool framework",
  "version": "0.1",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*/"
  ],
  "icons": {
    "128": "icons/omni-logo.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "OmniTool"
  }
}
